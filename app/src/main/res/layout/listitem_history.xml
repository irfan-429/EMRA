<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/RippleEffect"
    android:id="@+id/listitem_cv_historyLayout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/listitem_tv_customerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client ID"
            android:textSize="@dimen/_16sdp"
            />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/listitem_tv_customerID"
            android:id="@+id/listitem_customerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="@dimen/_15sdp"
            />


        <TextView
            android:id="@+id/listitem_createdDate"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/listitem_tv_customerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yyyy-MM-dd"
            android:textSize="@dimen/_12sdp"
            />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/listitem_createdTime"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/listitem_createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hh:mm a"
            android:textSize="@dimen/_12sdp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>